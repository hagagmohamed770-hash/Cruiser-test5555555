{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "vercel-secret-key-2025",
    "COMPANY_NAME": "شركة إدارة الاستثمار العقاري",
    "CURRENCY": "ريال",
    "LANGUAGE": "ar",
    "TIMEZONE": "Asia/Riyadh"
  }
}