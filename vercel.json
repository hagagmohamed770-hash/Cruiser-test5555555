{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "JWT_SECRET": "vercel-secret-key-2025",
    "COMPANY_NAME": "شركة إدارة الاستثمار العقاري",
    "CURRENCY": "ريال",
    "LANGUAGE": "ar",
    "TIMEZONE": "Asia/Riyadh"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}